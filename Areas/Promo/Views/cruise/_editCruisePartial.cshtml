
<div class="modal fade" id="modal-container-46302" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        @using (Html.BeginForm("Index", "CruisePromo", new { option = "resort", op = "DMC" }, FormMethod.Post, new { id = "dmc2" }))
        {
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title" id="myModalLabel">
                        Edit Cruise line information
                    </h4>
                </div>
                <div class="modal-body">
                    <table>
                        <tr>
                            <td>
                                <b> CustomerId</b>
                            </td>
                            <td>
                                <input type="text" id="customerid3" name="customerid" value="" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <b> Name of Cruise</b>
                            </td>
                            <td>
                                <input type="text" id="NameofDMC3" name="NameofDMC" value="" onblur="return validatenameDMC2();" />
                                <input type="text" name="cati" value="cruise" style="visibility:collapse;" />
                            </td>
                        </tr>
                        <tr style="visibility:collapse" id="summary3">
                            <td></td>
                            <td>
                                <p>
                                    <b style="color:red;"> Cruise line name is a require field and needs to be enter.</b>
                                </p>
                                <input type="text" name="mode" value="edit" style="visibility:collapse;" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <b>Vouncher tag</b>
                            </td>
                            <td>
                                <input type="text" id="Abbrivation3" name="Abbrivation" value="" onblur="return validatenameDMC2();" />
                            </td>
                        </tr>
                        <tr style="visibility:collapse" id="summary4">
                            <td></td>
                            <td>
                                <p>
                                    <b style="color:red;">A tag needed to identify the the promo code associate with the client.</b>
                                </p>
                                <input type="text" id="ecid" name="cid" value="" style="visibility:collapse;" />
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <p>
                                    <b style="color:#808080;">
                                        The voucher tag is a part of the voucher code and is specific to the vouncher assign to the Cruise.
                                    </b>
                                </p>
                            </td>
                            <td></td>
                        </tr>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" onclick="return checkstatusDMC2();">Save changes</button>
                </div>
            </div>


            <script type="text/javascript">
                function validatenameDMC2() {
                    if (document.getElementById("NameofDMC3").value == '') {
                        document.getElementById("NameofDMC3").focus();
                        document.getElementById("summary3").style.visibility = "visible";
                    }
                    else if (document.getElementById("Abbrivation3").value == '') {
                        document.getElementById("Abbrivation3").focus();
                        document.getElementById("summary4").style.visibility = "visible";
                    }
                }

                function checkstatusDMC2() {

                    if (document.getElementById("NameofDMC3").value == '') {
                        document.getElementById("NameofDMC3").focus();
                        document.getElementById("summary3").style.visibility = "visible";
                    }
                    else if (document.getElementById("Abbrivation3").value == '') {
                        document.getElementById("Abbrivation3").focus();
                        document.getElementById("summary4").style.visibility = "visible";
                    }
                    else {
                        document.getElementById("dmc2").submit();
                    }
                    return false;
                }
            </script>
        }
    </div>
</div>