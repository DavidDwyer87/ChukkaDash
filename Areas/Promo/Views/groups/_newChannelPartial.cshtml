<div class="modal fade" id="modal-container-46300" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        @using (Html.BeginForm("Index", "group", new { option = "resort", op = "" }, FormMethod.Post, new { id = "EDMC" }))
        {
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title" id="myModalLabel">
                        New Direct Channel 
                    </h4>
                </div>

                <div class="modal-body">
                    <table>                     
                        <tr>
                            <td>
                                <b>Promo Code</b>
                            </td>
                            <td>
                                <input type="text" id="EAbbrivation" name="dctag" value="" onblur="return EvalidatenameDMC();" />
                            </td>
                        </tr>
                        <tr style="visibility:collapse" id="Esummary2">
                            <td></td>
                            <td>
                                <p>
                                    <b style="color:red;">Promo code required.</b>
                                    <input style="visibility:collapse;" id="tag" name="tag" type="text" value=""/>
                                </p>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" onclick="return EcheckstatusDMC();">Save changes</button>
                </div>
            </div>

            <script type="text/javascript">
                function EvalidatenameDMC() {
                     if (document.getElementById("EAbbrivation").value == '') {
                        document.getElementById("EAbbrivation").focus();
                        document.getElementById("Esummary2").style.visibility = "visible";
                    }
                }

                function EcheckstatusDMC() {

                    if (document.getElementById("EAbbrivation").value == '') {
                        document.getElementById("EAbbrivation").focus();
                        document.getElementById("summary2").style.visibility = "visible";
                    }
                    else {
                        document.getElementById("EDMC").submit();
                    }
                    return false;
                }
            </script>
        }
    </div>
</div>