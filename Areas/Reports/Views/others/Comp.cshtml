@model ChukkaDashB.Areas.Reports.Models.ResortMenuControlModel
@{
    ViewBag.Title = "Comp";
    Layout = "~/Areas/Reports/Views/Shared/_LayoutPage.cshtml";
}

@if (Model.tabledata != null)
{
    <div id="datatable" style="overflow:auto; height:450px; margin-top:20px;">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        Date
                    </th>
                    <th>
                        Hotel Name
                    </th>
                    <th>
                        Sales Representitive
                    </th>                    
                    <th>
                        PAX
                    </th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (ChukkaDashB.Areas.Reports.Models.ResortTableModel tdata in Model.tabledata)
                    {
                        <tr>
                            <td>
                                @tdata.index
                            </td>
                            <td>
                                @tdata.customID
                            </td>
                            <td>
                                @*<a id="modal-158344" href="#modal-container-158344" role="button" class="btn" data-toggle="modal" onclick="return loadXMLDoc('@tdata.name');">*@
                                    @tdata.name
                                @*</a>
                                @{ViewBag.name = tdata.name;}*@
                            </td>
                            <td>
                                @tdata.rep
                            </td>
                            <td>
                                @tdata.pax
                            </td>           
                        </tr>
                    }
                }
            </tbody>
            <tfoot>
                <tr>
                    <td>
                        <b>Total</b>
                    </td>
                    <td></td>
                    <td></td>
                    <td>
                        
                    </td>                    
                    <td>
                        <b>@Model.footer.total_pax</b>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
}




